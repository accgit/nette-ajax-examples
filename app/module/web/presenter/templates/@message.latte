<div n:foreach="$flashes as $flash" n:class="'alert alert-install fade show border-0', 'alert-' . $flash->type" role="alert">
	<div class="container alert-dismissible">{$flash->message}
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
</div>
